{
  "name": "home-teacher-meta",
  "version": "1.0.0",
  "private": true,
  "description": "HomeTeacher meta-repository for integrated build and deployment",
  "scripts": {
    "build:drawing-common": "cd repos/drawing-common && pnpm install && pnpm build",
    "build:home-teacher-core": "cd repos/home-teacher-core && pnpm install",
    "build:kids": "cd repos/home-teacher-core && pnpm run build:kids",
    "build:discuss": "cd repos/home-teacher-core && pnpm run build:discuss",
    "build:all": "cd repos/home-teacher-core && pnpm run build:all",
    "dev": "cd repos/home-teacher-core && pnpm run dev",
    "dev:discuss": "cd repos/home-teacher-core && pnpm run dev:discuss"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}